<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/led_indicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/led_grey"
                    android:layout_toStartOf="@id/status_text_view"/>

                <TextView
                    android:id="@+id/status_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Scanning..."
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        <TextView
            android:id="@+id/n_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/p_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/k_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ph_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pH: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/humidity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sun_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/moisture_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moisture: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/light_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light: --"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Suggestion Options"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/num_suggestions_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Number of Suggestions (e.g., 3)"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Plant Type"/>

        <Spinner
            android:id="@+id/plant_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/get_suggestion_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Get Suggestion" />

        <TextView
            android:id="@+id/suggestion_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Suggestion: --"
            android:textSize="16sp" />

        <Button
            android:id="@+id/take_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Take Picture" />

        <Button
            android:id="@+id/view_plots_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Plots" />

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>