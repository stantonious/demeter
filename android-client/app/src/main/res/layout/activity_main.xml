<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Scanning..."
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/n_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/p_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/k_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ph_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pH: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/humidity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sun_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/moisture_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moisture: --"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/light_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light: --"
            android:textSize="16sp" />

        <Button
            android:id="@+id/get_suggestion_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Get Suggestion" />

        <TextView
            android:id="@+id/suggestion_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Suggestion: --"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>